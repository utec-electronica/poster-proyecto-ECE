%%% Background
% Creates a background with two colors: R1G1B1 and R2G2B2 where the point P is the inflexion point for the degradation  of the colors.
% Syntaxis: \Background{R1 G1 B1}{R2 G2 B2}
\newcommand{\Background}[3]{
  \newrgbcolor{cgradbegin}{#1}
  \newrgbcolor{cgradend}{#2}
  \psframe[fillstyle=gradient,gradend=cgradend,linecolor=white,
  gradbegin=cgradbegin,gradmidpoint=#3](-0.5,0.5)(\bgwidth,-0.98\bgheight)
}
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%%% PsTricksBox
% Temporal command to create a box using pstricks
\newcommand{\PsTricksBox}[4]{
\psframebox[#3]{
%\psshadowbox[#3]{
\begin{minipage}[t][#2][t]{#1}
#4
\end{minipage}
}
}
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%%% CaptionFigure
% Creates a new caption for the figures
% Syntaxis: \CaptionFigure{The caption of the figure}
\setcounter{figure}{1}
\newcommand{\CaptionFigure}[1]{
  \begin{quote}
    {\normalsize \sf Figura \arabic{figure}. #1}
  \end{quote}
  \stepcounter{figure}
}
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%%% CaptionTable
% Creates a new caption for the tables
% Syntaxis: \CaptionTable{The caption of the table}
\setcounter{table}{1}
\newcommand{\CaptionTable}[1]{
  \begin{quote}
    {\normalsize \sf Table \arabic{table}. #1}
  \end{quote}
  \stepcounter{table}
}
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%%% TitleBox                    %%%
% Creates a filled box to be used in a new title
% Syntaxis: \TitleBox{The Title To Use}
\newcommand{\TitleBox}[1]{
\begin{center}
\PsTricksBox{0.8\textwidth}{}
{linewidth=1mm,framearc=0.1,linecolor=white,fillstyle=gradient,gradangle=0,
gradbegin=mycyan,gradend=mycyan,gradmidpoint=1.0,framesep=0.6em} {
\begin{center}
#1
\end{center}
}
\end{center}
}
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%%% MainTitleBox
% Creates a filled box to be used as the header of the poster, i.e, the main title
% Syntaxis: \MainTitleBox{The Title of the Poster}
\newcommand{\MainTitleBox}[1]{
\begin{center}
%\hspace{-2cm}\PsTricksBox{0.98\textwidth}{}
\hspace{0cm}\PsTricksBox{0.98\textwidth}{}
{linewidth=2mm,framearc=0.1,linecolor=mycyan,fillstyle=gradient,gradangle=0,
gradbegin=white,gradend=white,gradmidpoint=1.0,framesep=1em} {
\begin{center}
#1
\end{center}
}
\end{center}
}
